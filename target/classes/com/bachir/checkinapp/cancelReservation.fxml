<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bachir.checkinapp.CancelReservationController">
    <children>
        <Label text="Cancel Reservation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <VBox fx:id="reservationVBox" alignment="CENTER" spacing="10">
            <!-- Reservation items will be added here -->
        </VBox>
        
        <Button fx:id="submit" text="Submit" onAction="#submit" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        
        <Label fx:id="message" style="-fx-font-size: 14px; -fx-text-fill: #FF0000;" />
        
        <Button fx:id="homePage" text="Return to home page" onAction="#homePage" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
