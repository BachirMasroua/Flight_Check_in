<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bachir.checkinapp.SecondaryController">
    <children>
        <Label fx:id="WelcomClient" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <Button fx:id="NewReservation" text="New Reservation" onAction="#newReservation" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button fx:id="CancelReservation" text="Cancel Reservation" onAction="#cancelReservation" style="-fx-background-color: #FF5722; -fx-text-fill: white;" />
        <Button fx:id="generatePdf" text="Exit and get invoice" onAction="#generatePDF" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button fx:id="Addaseat" text="Add a seat" onAction="#newSeat" style="-fx-background-color: #9C27B0; -fx-text-fill: white;" />
        <Button fx:id="secondaryButton" text="New Client!" onAction="#switchToPrimary" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
