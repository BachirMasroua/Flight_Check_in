<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bachir.checkinapp.PrimaryController">
    <children>
        <Label text="Welcome To The Flight Check In" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <HBox alignment="CENTER" spacing="5">
            <Label text="Email:" />
            <TextField fx:id="emailField" style="-fx-prompt-text-fill: gray;" />
        </HBox>
        
        <HBox alignment="CENTER" spacing="5">
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" style="-fx-prompt-text-fill: gray;" />
        </HBox>
        
        <Button fx:id="LoginButton" text="Login" onAction="#switchToSecondary" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button fx:id="Sign_upButton" text="Sign up" onAction="#signup" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        
        <Label fx:id="tryLogin" style="-fx-font-size: 14px; -fx-text-fill: #FF0000;" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
